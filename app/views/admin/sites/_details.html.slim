#site_details
  div.site-block
    = render 'admin/sites/header', site: site

    - unless bills_for(site).empty?
      div.site_section
        div.title
          | Custom invoice information (Address, PO Box, etc)
          = add_or_clear_site_info(site)
        = site_info_or_form(site)

      div.site_section.billing_history
        div.title Billing History
        = render 'admin/bills/list', bills: bills_for(site), site: site, user: user

    div.site_section.subscription_history
      div.title Subscription History

      - if site.deleted?
        div
          | Site <strong>deleted</strong> on #{ site.deleted_at.strftime('%F') }

      - site.subscriptions.with_deleted.reverse.each do |sub|
        div
          | Changed to <strong>#{ sub.values[:name] } ##{ sub.id }</strong> on #{sub.created_at.strftime('%F')} #{ sub.trial_end_date ? "(trial ends #{ sub.trial_end_date.strftime('%F') })" : ''}

          - if sub.deleted?
            | (subscription deleted on #{ sub.deleted_at.strftime('%F') })

      div
        | Site created on #{site.created_at.strftime('%F')}

    - if site.site_memberships.with_deleted.any?
      div.site_section.site_users
        div.title Shared By
        = render 'admin/sites/site_users', site: site

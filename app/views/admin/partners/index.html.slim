div.row
  div.col-md-12

    h1
      | Partners
      = link_to 'Add New Partner', new_admin_partner_path

    - if @partners.empty?
      h3
        i none found

    - else
      table.table.table-striped.partners
        tr
          th ID
          th First Name
          th Last Name
          th Email
          th Community
          th Affiliate ID
          th Require CC
          th Users
          th Date Created
          th

        - @partners.each do |partner|
          tr
            td= link_to partner.id, edit_admin_partner_path(partner)
            td= partner.first_name
            td= partner.last_name
            td= partner.email
            td= partner.community
            td= partner.affiliate_identifier
            td= yes_or_no(partner.require_credit_card)
            td= link_to partner.users.count, admin_partner_path(partner)
            td= partner.created_at
            td
              = link_to 'Edit', edit_admin_partner_path(partner)
              =< link_to 'Delete', admin_partner_path(partner), method: :delete, data: { confirm: 'Are you sure you want to delete this Partner?' }

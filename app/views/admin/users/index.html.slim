div.row
  div.col-md-12

    = form_tag "/admin/users", :method => :get, :id => "admin-users-search" do
      = text_field_tag "q", "", :class => "form-control", :placeholder => "Search users", :autofocus => true

    h1 Users

    - if @users.empty?
      h3
        i none found

    - else
      table.table.admin-users
        tr
          th Email
          th Sites
          th Credit Cards
          th Registered
          th Logins
          th Latest login
          th

        - @users.each do |user|
          tr
            td
              = link_to user.email, admin_user_path(user)
              - if user.authentications.size > 0
                span.subtype
                  |  (G)
            td
              ul
                - user.sites.with_deleted.each do |site|
                  li
                    = link_to site.normalized_url.html_safe, site.url, target: "_blank"
                    - if site.deleted?
                      '  (Deleted)
                    - elsif !site.free?
                      '  (#{site.current_subscription.values[:name]})
                    - if site.users.count > 1
                      ' (shared)
            td
              ul
                - user.credit_cards.each do |credit_card|
                  li
                    = credit_card.description
                    - if credit_card.token
                      = link_to 'remove', admin_credit_card_path(credit_card), method: :delete, data: { confirm: 'Are you sure?' }
                    - else
                      = '(token removed)'

            td= user.created_at.strftime("%b %d, %Y")
            td= user.sign_in_count
            td
              = user.current_sign_in_at.try(:strftime, "%b %d, %Y at %l:%M %p")
            td
              - if user.deleted?
                | Deleted
              - else
                = link_to "impersonate", admin_impersonate_user_path(user), :method => :post

      = paginate @users

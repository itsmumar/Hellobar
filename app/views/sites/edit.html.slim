nav.tabs-wrapper
  = active_link_to 'You', profile_path()
  = active_link_to 'Team', site_team_path(current_site)
  = active_link_to 'Site', edit_site_path(current_site)

= simple_form_for @site do |f|

  .url-wrapper
    = f.label :url
    = f.text_field :url

  .select-wrapper
    = f.label :timezone
    = f.select :timezone, ActiveSupport::TimeZone.all.map{|tz| [tz.to_s, tz.tzinfo.identifier] }

  br

  .selector-wrapper
    = f.check_box :opted_in_to_email_digest, as: :boolean
    = f.label :opted_in_to_email_digest, "Send me a weekly email digest of this site's performance"

  .button-wrapper
    = link_to "Installation instructions", site_install_path(@site)

  .billing-wrapper
    h5.page-header.alt Billing
    - if @site.is_free?
      .half-block
        = render 'billing'
      .half-block
        = render 'upgrade_table'
    - else
      = render 'billing'


  footer
    = f.button :submit, "Save & Update", :class => "button"
    - if Permissions.delete_site?(current_user, @site)
      = link_to "Delete Site", site_path(@site), :method => :delete, :class => "button", data: { confirm: "Historical data will be deleted and you will not be able to recover it after this. Are you sure you wish to delete this site?" }

    - if @site.is_free?
      .button.show-upgrade-modal(data-source="Billing Upgrade Variation") Find out more

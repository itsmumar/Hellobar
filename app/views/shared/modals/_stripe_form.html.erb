<%= form_tag subscription_path, :id => 'payment-form' do %>

  <div class="form-row">
    <label class="stripe-label" for="card-element">
      Credit or debit card
    </label>
    <div id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display form errors. -->
    <div id="card-errors" role="alert"></div>
  </div>

  <footer class="footer">
    <a class="button cancel">Cancel</a>
    <button class="button submit btn-add" id="add-btn">Add</button>
  </footer>

<% end %>



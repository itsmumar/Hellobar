<div class="color-select-spacer"></div>

<div class="color-select-wrapper">
  <div class="color-select-block" {{action 'toggleFocus'}}>
    <span class="color-preview" {{bind-attr style=cssStyle}}></span>
    #{{ color }}
  </div>

  <div class="color-dropdown">
    {{!-- <div class="color-preview-row">
      <small>Site colors</small>
      <ul>
        {{#each siteColors}}
          {{view HelloBar.ColorPreview color=this}}
        {{/each}}
      </ul>
    </div> --}}

    <div class="color-preview-row">
      <small>Recent</small>
      <ul>
        {{#each recentColors}}
          {{view HelloBar.ColorPreview color=this}}
        {{/each}}
      </ul>
    </div>

    <div class="color-picker">
      <div class="gradient-block"></div>
      
      {{!-- <a class="eyedrop-button" {{action 'toggleSelecting'}}>
        <i class="icon-eyedropper"></i>
      </a> --}}

      <div class="rgb-block">
        <h6>R</h6>
        {{input type='number' class='r-val' min='0' max='255' step='1' value=rVal}}
      </div>
      <div class="rgb-block">
        <h6>G</h6>
        {{input type='number' class='g-val' min='0' max='255' step='1' value=gVal}}
      </div>
      <div class="rgb-block">
        <h6>B</h6>
        {{input type='number' class='b-val' min='0' max='255' step='1' value=bVal}}
      </div>
    </div>
  </div>
</div>
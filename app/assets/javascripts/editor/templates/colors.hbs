<h5 class="step-title">Design</h5>

<label>Theme</label>
<div class="select-wrapper">
  {{view Ember.Select
    content=themeOptions
    value=model.theme_id
    optionValuePath='content.id'
    optionLabelPath='content.name'
  }}
</div>

<label>Background Color</label>
{{color-select color=model.background_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor eyeDropperSelected='eyeDropperSelected'}}

<label>Text</label>
{{color-select color=model.text_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor}}

<label>Button</label>
{{color-select color=model.button_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor}}

<label>Button Text</label>
{{color-select color=model.link_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor}}

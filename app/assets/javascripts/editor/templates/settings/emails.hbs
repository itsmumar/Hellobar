<label>What do you want to collect from visitors?</label>
<div class="select-wrapper">
  {{view Ember.Select
    content=collectionOptions
    selection=model.collection_selection
    optionValuePath='content.id'
    optionLabelPath='content.text'
  }}
</div>

<label>Where do you want the emails stored?</label>
<div class="select-wrapper">
  {{view Ember.Select
    content=storageOptions
    selection=model.storage_selection
    optionValuePath='content.id'
    optionLabelPath='content.text'
  }}
</div>

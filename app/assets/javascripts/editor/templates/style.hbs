<div class="step-title">Style</div>

<div {{bind-attr class="routeForwarding:is-selected :step-link-wrapper"}}>
  {{#link-to 'style.bar' class='step-link-block'}}
    <i class="icon-bar"></i>
    <h6>Bar</h6>
    <p>Show a bar at the top or bottom of your site</p>
  {{/link-to}}

  {{#link-to 'style.popup' class='step-link-block'}}
    <i class="icon-modal"></i>
    <h6>PopUp</h6>
    <p>Show a window on your site highlighting your content</p>
  {{/link-to}}

  <a {{action 'changeStyle'}} class="change-selection">
    <i class="icon-arrow-thick"></i>
    Change Style
  </a>
</div>

{{outlet}}
<label>Message to tweet</label>
{{view Ember.TextField value=model.settings.message_to_tweet placeholder="Check out this great site!"}}

<label>
  Tweet the URL my visitor is on
  {{toggle-switch switch=model.settings.use_location_for_url}}
</label>

<label {{bind-attr class="model.settings.use_location_for_url:disabled"}}>URL to tweet</label>
{{view Ember.TextField value=model.settings.url_to_tweet placeholder="example.com" disabled=model.settings.use_location_for_url}}

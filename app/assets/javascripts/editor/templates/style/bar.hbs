<label title="Your bar will contain Hello Bar branding. By turning it off you will receive more clicks and conversions.">
  Hello Bar branding
  {{toggle-switch switch=model.show_branding}}
</label>

{{#unless model.site.capabilities.remove_branding}}
<label title="1 out of 10 views will be a promotion for Hello Bar. By turning it off youâ€™ll receive 10% more clicks and conversions.">
  Hello Bar ads
  {{toggle-switch switch=model.show_branding}}
</label>
{{/unless}}

<label>Animate entry/exit
  {{toggle-switch switch=model.animated}}
</label>

{{#if canWiggle}}
<label>Wiggle button
  {{toggle-switch switch=model.wiggle_button}}
</label>
{{/if}}

<label>Allow to hide bar
  {{toggle-switch switch=model.closable}}
</label>

<label>{{ pushesText }}
  {{toggle-switch switch=model.pushes_page_down}}
</label>

<label>Remains in place
  {{toggle-switch switch=model.remains_at_top}}
</label>

<label>Placement</label>
<div class="select-wrapper">
  {{view Ember.Select
    content=placementOptions
    value=selectedPlacement
    optionValuePath='content.value'
    optionLabelPath='content.label'
  }}
</div>

<label>Bar Size</label>
<div class="select-wrapper">
  {{view Ember.Select
    content=sizeOptions
    value=model.size
    optionValuePath='content.value'
    optionLabelPath='content.label'
  }}
</div>

<label>When does it display? <a {{action "popDelayTootlipModal"}} class="tooltip-label">(what's this?)</a></label>
<div class="select-wrapper">
  {{view Ember.Select
    content=triggerOptions
    value=selectedTrigger
    optionValuePath='content.value'
    optionLabelPath='content.label'
  }}
</div>

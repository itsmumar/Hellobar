<h5 class="step-title">Settings</h5>

<div {{bind-attr class="routeForwarding:is-selected :step-link-wrapper"}}>
  {{#link-to 'settings.emails' class='step-link-block'}}
    <i class="icon-contacts"></i>
    <h6>Collect Email</h6>
    <p>Use your Hello Bar to collect visitors' email addresses</p>
  {{/link-to}}

  {{#link-to 'settings.social' class='step-link-block'}}
    <i class="icon-social"></i>
    <h6>Social</h6>
    <p>Point visitors to your social media channels</p>
  {{/link-to}}

  {{#link-to 'settings.click' class='step-link-block'}}
    <i class="icon-clicks"></i>
    <h6>Click Link</h6>
    <p>Use your Hello Bar to drive more traffic to a specific URL</p>
  {{/link-to}}

  <a {{action 'changeSettings'}} class="change-selection">
    <i class="icon-back1"></i>
    Change Goal
  </a>
</div>

{{outlet}}

@charset 'UTF-8'

/*-----------  Weight Corrections  -----------*/

@mixin antialiased($smooth: true)
  @if $smooth
    font-smoothing: antialiased
  @else
    font-smoothing: subpixel-antialiased

/*-----------  Icon Mixin  -----------*/

@mixin use-icon($content: "")
  content: $content
  font-family: "hellobar"

@mixin use-hb-icon($content: "")
  content: $content
  font-family: "hellobar-icons"

/*-----------  Custom Icon Font  -----------*/

@font-face
  font-family: "hellobar"
  src: url(<%= asset_path "hellobar.eot" %>)
  src: url(<%= asset_path "hellobar.eot?#iefix" %>) format("embedded-opentype"), url(<%= asset_path "hellobar.woff" %>) format("woff"), url(<%= asset_path "hellobar.ttf" %>) format("truetype"), url(<%= asset_path "hellobar.svg#hellobar" %>) format("svg")
  font-weight: normal
  font-style: normal

@font-face
  font-family: "hellobar-icons"
  src: url(<%= asset_path "hellobar-icons.eot" %>)
  src: url(<%= asset_path "hellobar-icons.eot?#iefix" %>) format("embedded-opentype"), url(<%= asset_path "hellobar-icons.woff" %>) format("woff"), url(<%= asset_path "hellobar-icons.ttf" %>) format("truetype"), url(<%= asset_path "hellobar-icons.svg#hellobar-icons" %>) format("svg")
  font-weight: normal
  font-style: normal

@media screen and (-webkit-min-device-pixel-ratio:0)
  @font-face
    font-family: "hellobar-icons"
    src: url(<%= asset_path "hellobar-icons.svg#hellobar-icons" %>) format("svg")

[data-icon]:before
  font-family: 'hellobar' !important
  content: attr(data-icon)
  font-style: normal !important
  font-weight: normal !important
  font-variant: normal !important
  text-transform: none !important
  speak: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale


/***************  BUTTONS  ***************/

.btn-bottom {
  position: absolute;
  bottom: -97px;
  left: 0;
  right: 0;
  z-index: 1;
}

.btn {
  font-family: 'proxima-nova';
  font-weight: 700; 
  outline: 0;
  border-radius: 0px;
  border: 1px solid transparent;
  font-size: 18px;
  padding: 4px 20px;
  z-index: 1;
  -webkit-appearance: none;
  -webkit-transition: all 200ms ease-in-out;
  -moz-transition: all 200ms ease-in-out;
  -ms-transition: all 200ms ease-in-out;
  -o-transition: all 200ms ease-in-out;
  transition: all 200ms ease-in-out;
}

.btn-radius {
  border-radius: 3px;
}

.btn.btn-orange {
  border: 1px solid #ff6836;
  background-color: #ff6836;
  color: #fff;
}

.btn.btn-orange:hover,
.btn.btn-orange:focus {
  background-color: #fff;
  border: 1px solid #ff6836;
  color: #ff6836;
  -webkit-transition: all 200ms ease-in-out;
  -moz-transition: all 200ms ease-in-out;
  -ms-transition: all 200ms ease-in-out;
  -o-transition: all 200ms ease-in-out;
  transition: all 200ms ease-in-out;
}

.btn.btn-white {
  border: 1px solid #fff;
  background-color: #fff;
  color: #ff6836;
}

.btn.btn-white:hover,
.btn.btn-white:focus {
  background-color: #ff6836;
  border: 1px solid #fff;
  color: #fff;
  -webkit-transition: all 200ms ease-in-out;
  -moz-transition: all 200ms ease-in-out;
  -ms-transition: all 200ms ease-in-out;
  -o-transition: all 200ms ease-in-out;
  transition: all 200ms ease-in-out;
}

.btn.btn-lg {
  font-size: 24px;
  padding: 16px 36px;
}

@media(max-width:640px) {
  .btn {
    font-size: 16px;
    padding: 4px 12px;
  }
  .btn.btn-lg {
    font-size: 20px;
    padding: 10px 16px;
  }
}



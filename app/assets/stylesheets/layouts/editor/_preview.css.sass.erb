/*-----------  Site Preview  -----------*/

.editor-wrapper

  .preview-wrapper
    width: 100%
    height: 100%
    overflow: hidden
    position: relative
    background-color: $grayLightest

    #hellobar-preview-container
      width: 100%
      height: 100%
      position: relative

      #hellobar_container
        width: 100%
        position: absolute

      #hellobar_pusher
        display: none !important

      .preview-wrapper
        top: 0
        left: 0
        width: 100%
        height: 100%
        position: absolute
        box-shadow: inset 0 0 1em rgba(0,0,0,0.15)

        .preview-message
          left: 0
          right: 0
          position: absolute
          text-align: center
          @include vertical-align()

          i:before
            display: block
            font-size: 2.75em
            @include animation(spin 2s infinite ease-in-out)

      .preview-image
        margin-top: 0
        position: relative !important

      &.is-pushed.Bar

        #hellobar_container
          position: relative !important

        .preview-image
          margin-top: -14px

    canvas
      cursor: url(<%= asset_path "eyedropper.svg" %>) 0 18, auto

  /*-----------  Mobile State -----------*/

  &.is-mobile

    .preview-wrapper
      background: $grayLightest url(<%= asset_path "iphone-bg.png" %>) center center no-repeat

    #hellobar-preview-container
      width: 232px
      height: 410px
      overflow: hidden
      margin: -3px auto 0
      border: 1px solid $grayLight
      @include vertical-align()

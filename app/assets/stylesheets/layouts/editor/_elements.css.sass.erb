/*-----------  Editor Elements  -----------*/

.editor-wrapper

  h6
    font-size: 0.95em
    line-height: 133%
    color: $grayDarkest
    letter-spacing: 0.02em

  p
    color: $grayDarker
    font-size: 0.8em
    line-height: 150%
    letter-spacing: 0.02em

  /*-----------  Buttons  -----------*/

  .button
    @extend %green-button

    &[disabled]
      @extend %darkgray-button

  /*-----------  Color Select  -----------*/

  .color-select
    position: relative
    @include user-select(none)
    
    .color-select-spacer
      height: 2.67em
      display: block

    .color-select-wrapper
      top: 0
      left: 0
      width: 100%
      padding: 0.33em
      overflow: hidden
      font-size: 0.85em
      max-height: 2.67em
      position: absolute
      margin: 0.75em auto
      border: 1px solid $gray
      background-color: $white
      @include transition(0.15s ease-in-out)
      @extend .select-wrapper

      &:before
        top: 0.25em
        bottom: auto

      .color-select-block
        cursor: pointer
        line-height: 1.85em
        padding-bottom: 0.5em
        text-transform: uppercase

        .color-preview
          width: 2.5em
          height: 1.75em
          margin-right: 0.67em
          border: 1px solid $gray
          @include inline-block()

      .color-dropdown
        width: 95%
        opacity: 0
        margin: 0 auto
        padding: 0.67em 0
        border-top: 1px solid $grayLight
        @include transition(0.25s ease-in-out)

        .color-preview-row
          @include clearfix()

          ul
            width: 69%
            margin-bottom: 0.5em
            cursor: url(<%= asset_path "eyedropper.svg" %>) 0 18, auto
            @include justify-content(space-between)
            @include align-items(stretch)
            @include flex-flow(row nowrap)
            @include display(flex)    


            .color-preview
              width: 22%
              height: 1.1em
              border-radius: $radiusSm
              border: 1px solid $gray
              @include inline-block()

          small
            width: 25%
            float: right
            color: $gray
            line-height: 1.67em

        .color-picker
          padding-top: 0.33em
          @include clearfix()

          .gradient-block
            width: 69%
            float: left
            height: 9.67em
            border: 1px solid $gray

          .minicolors
            float: left

          .eyedrop-button
            width: 25%
            float: right
            cursor: pointer
            color: $grayDark
            text-align: center
            margin-bottom: 2.65em
            border-radius: $radiusSm
            border: 1px solid $grayLight
            @include inline-block()

            i:before
              line-height: 2em

            &:hover
              color: $grayDarker
              border-color: $gray

          .rgb-block
            width: 25%
            float: right
            position: relative
            margin-top: 0.25em

            h6
              top: 0.5em
              left: 0.5em
              position: absolute
              @include inline-block(inherit)

            input
              margin: 0
              width: 100%
              padding: 0.5em
              text-align: right
              border-radius: $radiusSm
              border: 1px solid $grayLight

    &.in-focus

      .color-select-wrapper
        z-index: 900
        max-height: 21em
        box-shadow: $shadowSubtle
    
        &:before
          @include transform(rotate(-180deg))

        .color-dropdown
          opacity: 1

    &.is-selecting

      .eyedrop-button
        color: $green !important
        border-color: $green !important

  /*-----------  Toggle Switches -----------*/

  .toggle-switch
    padding: 2px
    float: right
    cursor: pointer
    margin-top: -4px
    border-radius: $radiusSm
    background-color: $white
    border: 1px solid $grayLight
    @include user-select(none)
    @include inline-block()
    @include transition()

    span
      color: $grayLight
      text-align: center
      line-height: 1.25rem
      text-transform: uppercase
      @include transition()

      &.toggle-on
        opacity: 0
        float: left
        margin-top: 1px
        margin-left: 2px
        font-size: 0.75em

      &.toggle-off
        opacity: 1
        float: right
        margin-top: 1px
        font-size: 0.7em
        margin-right: 2px

    .toggle-floater
      width: 1.45em
      height: 1.45em
      margin-left: 0
      border-radius: 2px
      margin-right: 1.75em
      background-color: $grayLight
      @include transition(0.2s)

    &:hover
      border-color: $gray
      box-shadow: inset $shadowSubtle

      span
        color: $gray
    
      .toggle-floater
        box-shadow: $shadowSubtle
        background-color: $gray
    
    &.is-selected
      border-color: $green
      background-color: $green

      span
        color: $white

        &.toggle-on
          opacity: 1

        &.toggle-off
          opacity: 0

      .toggle-floater
        margin-right: 0
        margin-left: 1.75em
        background-color: $white
    
      &:hover
        box-shadow: inset $shadow
      
        .toggle-floater
          box-shadow: $shadow

  /*-----------  Social Select -----------*/

  .social-select
    margin-top: 0.5em

    li
      opacity: 1
      cursor: pointer
      max-height: 2em
      margin: 0 -0.5em
      border-radius: 10em
      padding: 0.25em 0.5em 0.33em
      @include transition(0.67s)
      @include antialiased()

      i
        top: 0
        font-size: 1.5em
        line-height: 100%
        position: relative
        margin-right: 0.5rem
        vertical-align: middle

      &.twitter

        i
          color: $twitter

        &:hover
          color: $twitter
          background-color: rgba($twitter, 0.08)

      &.facebook
 
        i
          color: $facebook

        &:hover
          color: $facebook
          background-color: rgba($facebook, 0.08)

      &.linkedin
 
        i
          color: $linkedin

        &:hover
          color: $linkedin
          background-color: rgba($linkedin, 0.08)

      &.google
 
        i
          color: $google

        &:hover
          color: $google
          background-color: rgba($google, 0.08)

      &.pinterest
 
        i
          color: $pinterest

        &:hover
          color: $pinterest
          background-color: rgba($pinterest, 0.08)

      &.buffer
 
        i
          color: $buffer

        &:hover
          color: $buffer
          background-color: rgba($buffer, 0.08)

      i.icon-close
        top: -1px
        color: $white
        display: none
        width: 1.33em
        height: 1.33em
        font-size: 0.67em
        text-align: center
        margin-left: 0.5rem
        border-radius: 10em
        background-color: $grayLight
        @include transition(0.67s)

        &:before
          top: 1px
          font-size: 0.75em
          font-weight: bold
          position: relative

        &:hover
          background-color: $gray

    &.is-selected

      li

        &:not(.is-selected)
          opacity: 0
          max-height: 0
          padding-top: 0
          padding-bottom: 0
          overflow: hidden

        &.is-selected
          cursor: default
  
          .icon-close
            cursor: pointer
            @include inline-block()

          &:hover
            color: inherit
            background-color: transparent

{{#if allowImages}}
  {{#if themeWithImage}}
    <label class="default-image">
      {{toggle-switch switch=model.use_default_image}}
      Use default image
    </label>
  {{/if}}

  {{#unless useThemeImage}}
    <label>Upload an image</label>
    <div class="image-upload">
      {{image-uploading/image-upload
        setImageProps="setImageProps"
        hasUserChosenImage=hasUserChosenImage
        existingURL=model.image_url
        existingFileName=model.image_file_name
        imageUploadCopy=imageUploadCopy
        useThemeImage=useThemeImage
      }}
    </div>

    {{#if showImagePlacementField}}
      <label>Image placement</label>
      <div class="select-wrapper">
        {{#power-select options=imagePlacementOptions
          selected=selectedImagePlacementOption
          renderInPlace=true
          searchEnabled=false
          onchange=(action "selectImagePlacement") as |option|}}
          {{option.label}}
        {{/power-select}}
      </div>
    {{/if}}
  {{/unless}}
{{else}}
  <label>Site Bars do not support images.
    You'll need to use a Modal, Slider, or Page Takeover to upload an image.</label>
{{/if}}

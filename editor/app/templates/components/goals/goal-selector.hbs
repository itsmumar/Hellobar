<div class="settings ember-view">

  <h5 class="step-title">Goals</h5>

  <div class="step-link-wrapper {{if selectionInProgress 'is-not-selected' 'is-selected'}}">

    {{#if shouldShowEmail}}
      <div class="step-link-block active" {{action 'select' 'email'}}>
        <i class="icon-contacts"></i>
        <h6>Collect Email</h6>

        <p>Use your Hello Bar to collect visitors' email addresses</p>
      </div>
    {{/if}}

    {{#if shouldShowCall}}
      <div class="step-link-block active" {{action 'select' 'call'}}>
        <i class="icon-call"></i>
        <h6>Talk to Visitors</h6>

        <p>Let mobile visitors call you with a click</p>
      </div>
    {{/if}}

    {{#if shouldShowSocial}}
      <div class="step-link-block active" {{action 'select' 'social'}}>
        <i class="icon-social"></i>
        <h6>Social</h6>

        <p>Point visitors to your social media channels</p>
      </div>
    {{/if}}

    {{#if shouldShowTraffic}}
      <div class="step-link-block active" {{action 'select' 'traffic'}}>
        <i class="icon-clicks"></i>
        <h6>Click Link</h6>

        <p>Use your Hello Bar to drive more traffic to a specific URL</p>
      </div>
    {{/if}}

    {{#if shouldShowAnnouncement}}
      <div class="step-link-block active" {{action 'select' 'announcement'}}>
        <i class="icon-megaphone"></i>
        <h6>Announcement</h6>

        <p>Display a simple announcement to your visitors</p>
      </div>
    {{/if}}

    {{#if shouldShowInitiateSelection}}
      <a {{action 'initiateSelection'}} class="change-selection">
        <i class="icon-back1"></i>
        Change Goal
      </a>
    {{/if}}
  </div>

</div>

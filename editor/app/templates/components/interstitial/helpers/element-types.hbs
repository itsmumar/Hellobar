<div class="goal-wrapper">
  <a {{action 'selectGoalAndType' model.element_subtype 'bar' }}>
    <div class="goal-block bigger contacts {{if isCall 'only-option'}}">
      <h6>Hello Bar</h6>
      <img src="{{ image_path 'icons/type-bar.svg' }}">
      <p>A customizable bar at the top or <br> bottom of your site.</p>
    </div>
  </a>

  {{#unless isCall}}
  <a {{action 'selectGoalAndType' model.element_subtype 'modal' }}>
    <div class="goal-block bigger other" data-route="other">
      <h6>Pop-up Modal</h6>
      <img src="{{ image_path 'icons/type-modal.svg' }}">
      <p>A pop up window in the center <br>of your site.</p>
    </div>
  </a>

  <a {{action 'selectGoalAndType' model.element_subtype 'slider' }}>
    <div class="goal-block bigger money" data-route="traffic">
      <h6>Slider</h6>
      <img src="{{ image_path 'icons/type-slider.svg' }}">
      <p>A small window that slides out of <br> the right or left side.</p>
    </div>
  </a>
  {{/unless}}
</div>

{{#unless isCall}}
<div class="goal-wrapper">

<div class="preview-wrapper" style="background: {{componentBackground}}">
  {{#if isNotElementSelected}}
    <div id="overlay">
      <div id="text">TO PREVIEW THE SITE ELEMENT ON YOUR SITE,<br/>
      CHOOSE A GOAL AND TYPE</div>
    </div>
  {{/if}}
  {{navigation/top-bar-navigation viewMode=viewMode closeEditor='closeEditor'}}

  {{preview/containers/announcement-container}}

  {{preview/containers/right-pane}}

  <div id="hellobar-preview-container" class={{previewContainerCssClasses}}>
    <div class="loading-message">
      <i class="icon-settings"></i>
      Site preview loading...
    </div>

    <div class="preview-image" style={{previewStyleString}}></div>

    <img class="preview-image-for-colorpicker" src={{previewImageURL}} />
  </div>
</div>

<img class="side-bar-logo" src="{{ image_path "icons/h-logo.svg" }}">

<ul class="step-links">
  {{#link-to 'goals' tagName="li"}}
    <div class="step-links__item" onclick={{action "updateProgress"}}>
      <div class="progress"></div>
      <img src="{{ image_path "icons/goal.svg" }}">
      <div class="caption">Goals</div>
    </div>
  {{/link-to}}

  {{#link-to 'styles' tagName="li"}}
    <div class="step-links__item" onclick={{action "updateProgress"}}>
      <div class="progress"></div>
      <img src="{{ image_path "icons/type.svg" }}">
      <div class="caption">Type</div>
    </div>
  {{/link-to}}

  {{#link-to 'design' tagName="li"}}
    <div class="step-links__item" onclick={{action "updateProgress"}}>
      <div class="progress"></div>
      <img src="{{ image_path "icons/design.svg" }}">
      <div class="caption">Design</div>
    </div>
  {{/link-to}}

  {{#link-to 'targeting' tagName="li" onclick=(action "updateProgress")}}
    <div class="step-links__item" onclick={{action "updateProgress"}}>
      <div class="progress"></div>
      <img src="{{ image_path "icons/targeting.svg" }}">
      <div class="caption">Targeting</div>
    </div>
  {{/link-to}}

<div class="default-text">
  {{#if uploading}}
    <i class="icon-sync"></i>
    <div>
      Uploading <strong>{{uploading}}</strong>
    </div>
  {{else}}
    <img src="{{image-path 'upload-icon.svg'}}">
    <div>
      Drag an image or GIF here <br/>or <a href="#_">browse</a>
      {{#if filename}}
        to replace the<br/>uploaded image
      {{else}}
        for an image<br/>to upload
      {{/if}}
    </div>
    <div><small>{{imageUploadCopy}}</small></div>
  {{/if}}
</div>

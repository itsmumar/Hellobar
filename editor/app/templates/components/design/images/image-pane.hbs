{{#if allowImages}}
  {{#if themeHasDefaultImage}}
    <label class="default-image">
      {{common/checkboxes/toggle-switch switch=model.use_default_image}}
      Use default image
    </label>
  {{/if}}

  {{#unless useThemeImage}}
    <label>Upload an image</label>
    <div class="image-upload">
      {{design/images/uploading/image-upload
        setImageProps="setImageProps"
        existingURL=model.image_url
        existingFileName=model.image_file_name
        imageUploadCopy=imageUploadCopy
        useThemeImage=useThemeImage
      }}
    </div>

  {{/unless}}

  <div class="panel-input">
    <div class="panel-input__label">Opacity</div>
    <div class="panel-input__input">
      {{common/inputs/font-size size=model.image_opacity}}
    </div>
  </div>

  {{#if backgroundImage }}
    <div class="panel-input">
      <div class="panel-input__label">Overlay color</div>
      <div class="panel-input__input">
        {{common/inputs/font-color color=model.image_overlay_color}}
      </div>
    </div>

    <div class="panel-input">
      <div class="panel-input__label">Overlay opacity</div>
      <div class="panel-input__input">
        {{common/inputs/font-size size=model.image_overlay_opacity}}
      </div>
    </div>
  {{/if}}
{{else}}
  <label>Site Bars do not support images.
    You'll need to use a Modal, Slider, or Page Takeover to upload an image.</label>
{{/if}}

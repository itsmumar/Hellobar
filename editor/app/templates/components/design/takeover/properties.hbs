{{#common/panels/collapse-panel title="Page Takeover Styling"}}
  <div class="panel-input">
    <div class="panel-input__label">Color</div>
    <div class="panel-input__input">
      {{common/inputs/color-picker color=model.background_color}}
    </div>
  </div>

  <div class="panel-input">
    <div class="panel-input__label">Default text color</div>
    <div class="panel-input__input">
      {{common/inputs/color-picker color=model.text_color}}
    </div>
  </div>
  <label class="optional-caption">
    Optional caption
    {{common/checkboxes/toggle-switch switch=model.show_optional_caption}}
  </label>
  <label class="optional-content ">
    Optional content
    {{common/checkboxes/toggle-switch switch=model.show_optional_content}}
  </label>
{{/common/panels/collapse-panel}}

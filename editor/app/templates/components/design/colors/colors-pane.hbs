<div id="" class="tab-content">

  <label>Background Color</label>
  {{design/colors/selection/color-select color=model.background_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor eyeDropperSelected='eyeDropperSelected'}}

  <label>Default Text Color</label>
  {{design/colors/selection/color-select color=model.text_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor eyeDropperSelected='eyeDropperSelected'}}

  <label>Button</label>
  {{design/colors/selection/color-select color=model.button_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor eyeDropperSelected='eyeDropperSelected'}}

  {{#if elementTypeIsAlert}}
    <label>Trigger Color</label>
    {{design/colors/selection/color-select color=model.trigger_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor eyeDropperSelected='eyeDropperSelected'}}

    <label>Trigger Icon Color</label>
    {{design/colors/selection/color-select color=model.trigger_icon_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor eyeDropperSelected='eyeDropperSelected'}}
  {{/if}}

  <br/>

  <label>Button rounded corners</label>

  <div class="slider-wrapper">
    {{common/sliders/range-slider min=0 max=100 start=model.button_border_radius update="buttonCornersUpdated" leftLabel="0" rightLabel="100"}}
  </div>

  <br/>

  <label class="questions">
    {{common/checkboxes/toggle-switch switch=model.button_border}}
    Button border
  </label>

  {{#if model.button_border}}
    <label>Button border color</label>
    {{design/colors/selection/color-select color=model.button_border_color siteColors=siteColors recentColors=recentColors focusedColor=focusedColor eyeDropperSelected='eyeDropperSelected'}}

    <label>Button border width</label>

    <div class="slider-wrapper">
      {{common/sliders/range-slider min=0 max=8 default=1 start=model.button_border_width update="buttonBorderUpdated" leftLabel="0" rightLabel="8"}}
    </div>
  {{/if}}
</div>

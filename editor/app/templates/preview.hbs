


<div class="preview-wrapper">
  {{#if isCustom}}
  <div  id="container" style="width: 100%; margin: 15px;">
      <div id="first" style="width: 33.3%; float: left; height: 400px;"><h6>HTML</h6>{{textarea value=model.custom_html style="height:90%" class="code-input" id="custom-html-input"}}</div>
      <div id="second" style="width: 33.3%; float: left;height: 400px;"><h6>CSS</h6>{{textarea value=model.custom_css style="height:90%" class="code-input" id="custom-css-input"}}</div>
      <div id="third" style="width: 33.3%; float: left;height: 400px;"><h6>JS</h6>{{textarea value=model.custom_js style="height:90%" class="code-input" id="custom-js-input"}}</div>

      <div id="clear" style="clear: both;"></div>
  </div>

    <div id="clear" style="clear: both;"></div>



  {{/if}}

  <div class="preview-wrapper" style="background: #f6f6f6 url({{image-path "iphone-bg.png"}})  center center no-repeat">


    {{announcement-container}}

    {{right-pane}}

    <div id="hellobar-preview-container" class={{previewContainerCssClasses}}>

      <div class="preview-wrapper">

        <div class="preview-message">
          <i class="icon-settings"></i>
          Site preview loading...
        </div>
      </div>




      <div class="preview-image" style={{previewStyleString}}></div>

      <img class="preview-image-for-colorpicker" src={{previewImageURL}} />
    </div>
  </div>
</div>
